<div class="home-box">
<h2>Formulario de registro</h2>
	<span>
		<span class="help-text">
			Ingres√° tus datos para poder registrarte y formar parte de la comunidad de <b>DondeVoyAComer.com</b>!<br/>
			Los datos marcados con un "*" son obligatorios.
		</span>
<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => {:multipart => true}) do |f| %>
  <%= devise_error_messages! %>
  <div class="field">
	* <%= f.label t(:fullname)%><br />
  	<%= f.text_field :fullname, {:class => "text-input"}%></div>

  <div class="field"><%= f.label :avatar %><br />
  <%= f.file_field :avatar%></div>

		<fieldset>
			<legend>Sexo</legend>	
	 <div class="field"><%= f.label "Hombre" %>
	  <%= f.radio_button :sex, "Hombre"%></div>
	 <div class="field"><%= f.label "Mujer" %>
	  <%= f.radio_button :sex, "Mujer"%></div>
		</fieldset>

 <div class="field"><%= f.label :birth_date%><br />
	 <div class="clearfix" id="fecha_nac_cont">
		<%= text_field_tag "fecha_nacimiento"%>
		<%= f.hidden_field :birth_date, {:id => "hidden_fecha"}%></div>
 </div>




  <div class="field">* <%= f.label :email %><br />
  <%= f.email_field :email , {:class => "text-input"}%></div>

  <div class="field">* <%= f.label :password %><br />
  <%= f.password_field :password , {:class => "text-input"}%></div>

  <div class="field">* <%= f.label :password_confirmation %><br />
  <%= f.password_field :password_confirmation , {:class => "text-input"}%></div>

  <div class="field"><%= f.submit t(:sign_up) %></div>
<% end %>

<%#= render :partial => "devise/shared/links" %>
  </span>
</div>