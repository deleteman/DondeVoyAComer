<h1>Listing places</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Active</th>
    <th>Phone number</th>
    <th>Address</th>
    <th>Opening time</th>
    <th>Closing time</th>
    <th>Picture path</th>
    <th>Type</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @places.each do |place| %>
  <tr>
    <td><%= place.name %></td>
    <td><%= place.active %></td>
    <td><%= place.phone_number %></td>
    <td><%= place.address %></td>
    <td><%= place.opening_time %></td>
    <td><%= place.closing_time %></td>
    <td><%= image_tag place.photo.url(:thumb) %></td>
    <td><%= get_place_type_text place.place_type %></td>
    <td><%= link_to 'Show', place %></td>
    <td><%= link_to 'Edit', edit_place_path(place) %></td>
    <td><%= link_to 'Destroy', place, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

